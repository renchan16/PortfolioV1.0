        </div>

        <!-- Tech Stack -->
        <div class="grid grid-cols-2 sm:grid-cols-3 gap-4 max-w-3xl">
          <div class="bg-white/10 backdrop-blur-sm border border-white/10 rounded-lg p-4 flex items-center space-x-4 hover:bg-white/20 transition-all duration-200">
            <div class="w-10 h-10 rounded-lg bg-blue-500/20 flex items-center justify-center">
              <img src="/python-logo.svg" alt="Python" class="w-6 h-6" />
            </div>
            <span class="font-semibold text-white">Python</span>
          </div>
          <div class="bg-white/10 backdrop-blur-sm border border-white/10 rounded-lg p-4 flex items-center space-x-4 hover:bg-white/20 transition-all duration-200">
