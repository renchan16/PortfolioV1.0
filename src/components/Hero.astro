    <!-- Main Content -->
    <div class="text-center">
      <h2 class="text-6xl font-bold text-white mb-4">Hi, I'm Renz Carlo!</h2>
      <p class="text-3xl text-gray-300 mb-8">Full-Stack Web Developer</p>
      
      <!-- Social Links -->
      <div class="flex justify-center space-x-6 mb-12">
        <a href={socialLinks.facebook} class="text-blue-400 hover:text-blue-300">
          <span class="sr-only">Facebook</span>
