---
interface Props {
  name: string;
  title: string;
}

const { name, title } = Astro.props;
---

<section id="home" class="min-h-screen flex items-center">
  <div class="container mx-auto px-6 text-center">
    <h1 class="text-5xl font-bold mb-4">Hi, I'm {name}</h1>
    <p class="text-xl text-gray-600 dark:text-gray-300 mb-8">{title}</p>
    <div class="space-x-4">
      <a href="#projects" class="bg-blue-500 text-white px-6 py-3 rounded-lg hover:bg-blue-600 transition">View My Work</a>
      <a href="#contact" class="border border-blue-500 text-blue-500 px-6 py-3 rounded-lg hover:bg-blue-50 transition">Contact Me</a>
    </div>
  </div>
</section> 