---
interface Props {
  title: string;
  socialLinks: {
    github?: string;
    linkedin?: string;
    telegram?: string;
    discord?: string;
  };
}

const { title, socialLinks } = Astro.props;
---

<section class="relative min-h-screen bg-gradient-to-br from-slate-950 to-slate-900 overflow-hidden">
  <!-- Geometric Pattern Overlay -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute inset-0" style="background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.4'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");"></div>
  </div>

  <div class="container relative mx-auto px-6 py-16 h-screen flex flex-col">
    <!-- Header -->
    <header class="flex justify-between items-center mb-16">
      <div class="flex items-center space-x-2">
        <div class="w-12 h-12 bg-blue-500 rounded-lg flex items-center justify-center">
          <span class="text-2xl font-bold text-white">R</span>
        </div>
        <h1 class="text-2xl font-bold text-white tracking-tight">Renzooo<span class="text-blue-500">.</span></h1>
      </div>

      <!-- Navigation -->
      <nav class="hidden md:flex items-center space-x-8">
        <a href="#about" class="text-slate-300 hover:text-white font-medium transition-colors">About</a>
        <a href="#stacks" class="text-slate-300 hover:text-white font-medium transition-colors">Stacks</a>
        <a href="#showcase" class="text-slate-300 hover:text-white font-medium transition-colors">Showcase</a>
        <a href="#experience" class="text-slate-300 hover:text-white font-medium transition-colors">Experience</a>
        <a href={socialLinks.github} class="bg-white/10 backdrop-blur-sm text-white px-6 py-2.5 rounded-lg flex items-center space-x-2 hover:bg-white/20 transition-colors border border-white/10">
          <span>Visit Me</span>
          <span class="text-lg">👨‍💻</span>
        </a>
      </nav>
    </header>

    <!-- Main Content -->
    <div class="flex-1 flex items-center">
      <div class="max-w-4xl">
        <h2 class="text-7xl font-bold text-white mb-6 leading-tight">
          Hi, I'm <span class="text-blue-500">Renz Carlo</span>
          <span class="block">Full-Stack Developer</span>
        </h2>
        <p class="text-xl text-slate-400 mb-12 max-w-2xl">Crafting robust and scalable web solutions with modern technologies. Focused on creating exceptional user experiences through clean, efficient code.</p>
        
        <!-- Social Links -->
        <div class="flex space-x-6 mb-16">
          <a href={socialLinks.github} class="group">
            <div class="w-12 h-12 rounded-lg bg-white/10 backdrop-blur-sm flex items-center justify-center border border-white/10 transition-all duration-200 group-hover:bg-white/20">
              <span class="text-2xl">👨‍💻</span>
            </div>
          </a>
          <a href={socialLinks.linkedin} class="group">
            <div class="w-12 h-12 rounded-lg bg-white/10 backdrop-blur-sm flex items-center justify-center border border-white/10 transition-all duration-200 group-hover:bg-white/20">
              <span class="text-2xl">💼</span>
            </div>
          </a>
          <a href={socialLinks.telegram} class="group">
            <div class="w-12 h-12 rounded-lg bg-white/10 backdrop-blur-sm flex items-center justify-center border border-white/10 transition-all duration-200 group-hover:bg-white/20">
              <span class="text-2xl">📱</span>
            </div>
          </a>
        </div>

        <!-- Tech Stack -->
        <div class="grid grid-cols-2 sm:grid-cols-3 gap-4 max-w-3xl">
          <div class="bg-white/10 backdrop-blur-sm border border-white/10 rounded-lg p-4 flex items-center space-x-4 hover:bg-white/20 transition-all duration-200">
            <div class="w-10 h-10 rounded-lg bg-blue-500/20 flex items-center justify-center">
              <span class="text-2xl">🐍</span>
            </div>
            <span class="font-semibold text-white">Python</span>
          </div>
          <div class="bg-white/10 backdrop-blur-sm border border-white/10 rounded-lg p-4 flex items-center space-x-4 hover:bg-white/20 transition-all duration-200">
            <div class="w-10 h-10 rounded-lg bg-blue-500/20 flex items-center justify-center">
              <span class="text-2xl">⚛️</span>
            </div>
            <span class="font-semibold text-white">React</span>
          </div>
          <div class="bg-white/10 backdrop-blur-sm border border-white/10 rounded-lg p-4 flex items-center space-x-4 hover:bg-white/20 transition-all duration-200">
            <div class="w-10 h-10 rounded-lg bg-blue-500/20 flex items-center justify-center">
              <span class="text-2xl">🚀</span>
            </div>
            <span class="font-semibold text-white">Next.js</span>
          </div>
          <div class="bg-white/10 backdrop-blur-sm border border-white/10 rounded-lg p-4 flex items-center space-x-4 hover:bg-white/20 transition-all duration-200">
            <div class="w-10 h-10 rounded-lg bg-blue-500/20 flex items-center justify-center">
              <span class="text-2xl">🟢</span>
            </div>
            <span class="font-semibold text-white">Node.js</span>
          </div>
          <div class="bg-white/10 backdrop-blur-sm border border-white/10 rounded-lg p-4 flex items-center space-x-4 hover:bg-white/20 transition-all duration-200">
            <div class="w-10 h-10 rounded-lg bg-blue-500/20 flex items-center justify-center">
              <span class="text-2xl">📦</span>
            </div>
            <span class="font-semibold text-white">Git</span>
          </div>
          <div class="bg-white/10 backdrop-blur-sm border border-white/10 rounded-lg p-4 flex items-center space-x-4 hover:bg-white/20 transition-all duration-200">
            <div class="w-10 h-10 rounded-lg bg-blue-500/20 flex items-center justify-center">
              <span class="text-2xl">📦</span>
            </div>
            <span class="font-semibold text-white">NPM</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section> 