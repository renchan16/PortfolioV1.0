      <!-- Tech Stack Badges -->
      <div class="flex justify-center flex-wrap gap-4">
        <div class="bg-white text-gray-900 px-6 py-2 rounded-full flex items-center space-x-2">
          <img src="/python-logo.svg" alt="Python" class="w-6 h-6" />
          <span class="font-semibold">PYTHON</span>
        </div>
        <div class="bg-white text-gray-900 px-6 py-2 rounded-full flex items-center space-x-2">
          <img src="/react-logo.svg" alt="React" class="w-6 h-6" />
          <span class="font-semibold">REACT</span>
        </div>
        <div class="bg-white text-gray-900 px-6 py-2 rounded-full flex items-center space-x-2">
          <img src="/npm-logo.svg" alt="NPM" class="w-6 h-6" />
