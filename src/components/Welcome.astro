---
// Welcome section component
import { ArrowDown } from 'lucide-react';
---

<section class="relative min-h-screen bg-slate-950 overflow-hidden">
  <!-- Animated Background Pattern -->
  <div class="absolute inset-0 opacity-5">
    <div class="absolute inset-0 animate-pulse" style="background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.4'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");"></div>
  </div>

  <!-- Gradient Overlay -->
  <div class="absolute inset-0 bg-gradient-to-b from-slate-950/50 to-slate-950"></div>

  <div class="container relative mx-auto px-6">
    <div class="max-w-6xl mx-auto min-h-screen flex flex-col items-center justify-center">
      <!-- Animated Text Elements -->
      <div class="text-center space-y-6">
        <h1 class="text-6xl md:text-7xl font-bold text-white mb-6 animate-fade-in">
          <span class="bg-clip-text text-transparent bg-gradient-to-r from-blue-400 to-blue-600">
            Renz Carlo
          </span>
        </h1>
        
        <div class="w-32 h-1 bg-gradient-to-r from-blue-500 to-blue-600 mb-8 animate-slide-in"></div>
        
        <p class="text-xl md:text-2xl text-gray-300 mb-8 text-center max-w-2xl animate-fade-in-up">
          Crafting beautiful and functional web experiences with modern technologies.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center animate-fade-in-up">
          <a 
            href="#about" 
            class="group bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 text-white px-8 py-4 rounded-lg transition-all duration-300 transform hover:scale-105 hover:shadow-lg flex items-center justify-center"
          >
            Explore My Work
            <ArrowDown client:load class="w-5 h-5 ml-2 group-hover:translate-y-1 transition-transform duration-300" />
          </a>
          <a 
            href="#contact" 
            class="group bg-white/10 hover:bg-white/20 text-white px-8 py-4 rounded-lg transition-all duration-300 transform hover:scale-105 hover:shadow-lg"
          >
            Get in Touch
          </a>
        </div>
      </div>

      <!-- Scroll Indicator -->
      <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
        <ArrowDown client:load class="w-6 h-6 text-white/50" />
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes slideIn {
    from {
      transform: scaleX(0);
    }
    to {
      transform: scaleX(1);
    }
  }

  .animate-fade-in {
    animation: fadeIn 1s ease-out forwards;
  }

  .animate-fade-in-up {
    animation: fadeInUp 0.8s ease-out forwards;
  }

  .animate-slide-in {
    animation: slideIn 0.8s ease-out forwards;
    transform-origin: left;
  }
</style> 