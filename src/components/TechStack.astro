<style>
  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes slideIn {
    from {
      transform: scaleX(0);
    }
    to {
      transform: scaleX(1);
    }
  }

  .animate-fade-in {
    animation: fadeIn 1s ease-out forwards;
  }

  .animate-fade-in-up {
    animation: fadeInUp 0.8s ease-out forwards;
  }

  .animate-slide-in {
    animation: slideIn 0.8s ease-out forwards;
    transform-origin: left;
  }
</style>

<script>
  const seeMoreBtn = document.getElementById('see-more-btn');
  const moreTechGrid = document.getElementById('more-tech-grid');

  seeMoreBtn.addEventListener('click', () => {
    moreTechGrid.classList.toggle('hidden');
    if (!moreTechGrid.classList.contains('hidden')) {
      // Trigger reflow to restart animation
      moreTechGrid.style.animation = 'none';
      moreTechGrid.offsetHeight; // Trigger reflow
      moreTechGrid.style.animation = '';
    }
    seeMoreBtn.textContent = moreTechGrid.classList.contains('hidden') ? 'See More' : 'See Less';
  });
</script> 