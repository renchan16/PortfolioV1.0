---
interface Project {
  title: string;
  description: string;
  image: string;
  tags: string[];
  links: {
    demo?: string;
    source?: string;
  };
}

interface Props {
  projects: Project[];
}

const { projects } = Astro.props;
---

<section id="projects" class="py-16 bg-gray-100 dark:bg-gray-800">
  <div class="container mx-auto px-6">
    <h2 class="text-4xl font-bold mb-8 text-center">My Projects</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map((project) => (
        <div class="bg-white dark:bg-gray-700 rounded-lg shadow-lg overflow-hidden">
          <img src={project.image} alt={project.title} class="w-full h-48 object-cover" />
          <div class="p-6">
            <h3 class="text-xl font-bold mb-2">{project.title}</h3>
            <p class="text-gray-600 dark:text-gray-300 mb-4">{project.description}</p>
            <div class="flex flex-wrap gap-2 mb-4">
              {project.tags.map((tag) => (
                <span class="bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-100 px-3 py-1 rounded-full text-sm">
                  {tag}
                </span>
              ))}
            </div>
            <div class="flex space-x-4">
              {project.links.demo && (
                <a href={project.links.demo} class="text-blue-500 hover:text-blue-600">View Project</a>
              )}
              {project.links.source && (
                <a href={project.links.source} class="text-blue-500 hover:text-blue-600">Source Code</a>
              )}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section> 