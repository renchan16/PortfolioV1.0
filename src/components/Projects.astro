---
interface Project {
  title: string;
  description: string;
  image?: string;
  tags: string[];
  links: {
    demo?: string;
    source?: string;
  };
}

interface Props {
  projects?: Project[];
}

const { projects = [
  {
    title: 'Portfolio Website',
    description: 'A modern portfolio website built with Astro and Tailwind CSS, featuring responsive design and dark mode.',
    tags: ['Astro', 'Tailwind CSS', 'TypeScript'],
    links: {
      demo: '#',
      source: 'https://github.com/renchan16/PortfolioV1.0',
    },
  },
  {
    title: 'Coming Soon',
    description: 'More exciting projects are in development. Stay tuned!',
    tags: ['In Progress'],
    links: {},
  },
]} = Astro.props;
---

<section id="showcase" class="relative py-32 bg-slate-950">
  <!-- Geometric Pattern Overlay -->
  <div class="absolute inset-0 opacity-5">
    <div class="absolute inset-0" style="background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.4'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");"></div>
  </div>

  <div class="container relative mx-auto px-6">
    <div class="max-w-5xl mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-5xl font-bold text-white mb-6">Featured Projects</h2>
        <div class="w-20 h-1 bg-blue-500 mx-auto mb-8"></div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {projects.map((project) => (
          <div class="group">
            <div class="bg-white/10 backdrop-blur-sm border border-white/10 rounded-2xl overflow-hidden transition-all duration-300 hover:bg-white/20">
              {project.image && (
                <div class="relative h-64 overflow-hidden">
                  <img 
                    src={project.image} 
                    alt={project.title}
                    class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300"
                  />
                  <div class="absolute inset-0 bg-gradient-to-t from-slate-900/80 to-transparent"></div>
                </div>
              )}
              <div class="p-8">
                <h3 class="text-2xl font-bold text-white mb-3">{project.title}</h3>
                <p class="text-slate-300 mb-6 leading-relaxed">
                  {project.description}
                </p>
                <div class="flex flex-wrap gap-2 mb-6">
                  {project.tags.map((tag) => (
                    <span class="bg-blue-500/20 text-blue-400 px-4 py-1.5 rounded-lg text-sm font-medium">
                      {tag}
                    </span>
                  ))}
                </div>
                <div class="flex space-x-4">
                  {project.links.demo && (
                    <a
                      href={project.links.demo}
                      class="inline-flex items-center px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition-colors"
                      target="_blank"
                      rel="noopener noreferrer"
                    >
                      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                      </svg>
                      View Demo
                    </a>
                  )}
                  {project.links.source && (
                    <a
                      href={project.links.source}
                      class="inline-flex items-center px-4 py-2 bg-white/10 text-white rounded-lg hover:bg-white/20 transition-colors"
                      target="_blank"
                      rel="noopener noreferrer"
                    >
                      <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                        <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"/>
                      </svg>
                      Source Code
                    </a>
                  )}
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section> 