---
interface Props {
  bio: string;
  skills: {
    frontend: string[];
    backend: string[];
    tools: string[];
  };
}

const { bio, skills } = Astro.props;
---

<section id="about" class="py-16">
  <div class="container mx-auto px-6">
    <div class="max-w-3xl mx-auto">
      <h2 class="text-4xl font-bold mb-8">About Me</h2>
      <div class="prose dark:prose-invert">
        <p class="text-lg mb-6">{bio}</p>
      </div>
    </div>

    <div class="max-w-3xl mx-auto mt-16">
      <h3 class="text-3xl font-bold mb-8">Skills</h3>
      <div class="grid grid-cols-2 md:grid-cols-3 gap-6">
        <div class="bg-white dark:bg-gray-700 p-6 rounded-lg shadow">
          <h4 class="text-xl font-bold mb-2">Frontend</h4>
          <ul class="space-y-2">
            {skills.frontend.map((skill) => (
              <li>{skill}</li>
            ))}
          </ul>
        </div>
        <div class="bg-white dark:bg-gray-700 p-6 rounded-lg shadow">
          <h4 class="text-xl font-bold mb-2">Backend</h4>
          <ul class="space-y-2">
            {skills.backend.map((skill) => (
              <li>{skill}</li>
            ))}
          </ul>
        </div>
        <div class="bg-white dark:bg-gray-700 p-6 rounded-lg shadow">
          <h4 class="text-xl font-bold mb-2">Tools</h4>
          <ul class="space-y-2">
            {skills.tools.map((skill) => (
              <li>{skill}</li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </div>
</section> 