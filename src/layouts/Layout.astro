---
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{title} | Renz Carlo</title>
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	</head>
	<body class="bg-gray-100 dark:bg-gray-900 text-gray-900 dark:text-gray-100">
		<header class="bg-white dark:bg-gray-800 shadow-sm">
			<div class="container mx-auto px-6 py-4">
				<nav class="flex items-center justify-between">
					<a href="/" class="text-xl font-bold">Renzooo<span class="text-blue-500">.</span></a>
					<div class="flex items-center space-x-6">
						<a href="#about" class="text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white">About</a>
						<a href="#tech-stacks" class="text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white">Tech Stacks</a>
						<a href="#experiences" class="text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white">Experiences</a>
						<a href="#projects" class="text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white">Projects</a>
						<a href="#contact" class="text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white">Contact</a>
					</div>
				</nav>
			</div>
		</header>

		<main>
			<slot />
		</main>

		<footer class="bg-white dark:bg-gray-800 py-8">
			<div class="container mx-auto px-6 text-center">
				<p>&copy; 2024 Renz Carlo. All rights reserved.</p>
			</div>
		</footer>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
