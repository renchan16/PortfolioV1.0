---
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-slate-950 text-white">
		<header class="fixed top-0 left-0 right-0 z-50 bg-slate-950/80 backdrop-blur-md border-b border-slate-800">
			<div class="container mx-auto px-6">
				<nav class="flex items-center justify-between h-16">
					<a href="/" class="text-2xl font-bold text-white">Renzooo<span class="text-blue-500">.</span></a>
					<div class="hidden md:flex space-x-8">
						<a href="#about" class="text-white hover:text-blue-500 transition-colors">About</a>
						<a href="#tech-stacks" class="text-white hover:text-blue-500 transition-colors">Tech Stacks</a>
						<a href="#experiences" class="text-white hover:text-blue-500 transition-colors">Experiences</a>
						<a href="#projects" class="text-white hover:text-blue-500 transition-colors">Projects</a>
						<a href="#contact" class="text-white hover:text-blue-500 transition-colors">Contact</a>
					</div>
				</nav>
			</div>
		</header>

		<main class="pt-16">
			<slot />
		</main>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
